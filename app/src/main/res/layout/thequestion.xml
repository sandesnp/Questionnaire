<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_red"
    android:fontFamily="@font/roboto"
    tools:context=".fragments.innerfragments.fragmentQuestion">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvthequestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Default Question A"
            android:textSize="30sp" />

        <RadioGroup
            android:id="@+id/rganswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <RadioButton
                android:id="@+id/rbanswerA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="default_a" />

            <RadioButton
                android:id="@+id/rbanswerB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="default_a" />

            <RadioButton
                android:id="@+id/rbanswerC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="default_a" />

            <RadioButton
                android:id="@+id/rbanswerD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="default_a" />
        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_margin="10dp"
            android:background="@color/black" />
    </LinearLayout>
</RelativeLayout>