<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="15dp"
    android:background="@drawable/curve_no_border_thequestion"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="105dp"

        android:orientation="vertical"
        android:paddingTop="50dp"
        android:paddingBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioGroup
            android:id="@+id/rganswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <RadioButton
                android:id="@+id/rbanswerA"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/radio_selector"
                android:button="@color/white"
                android:drawableEnd="@drawable/radio_checked_image"
                android:elevation="4dp"
                android:gravity="center"
                android:paddingStart="1dp"
                android:paddingEnd="20dp"
                android:text="@string/default_Answer"
                android:textColor="@drawable/radio_text_color" />


            <RadioButton
                android:id="@+id/rbanswerB"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/radio_selector"
                android:button="@color/white"
                android:drawableEnd="@drawable/radio_checked_image"
                android:elevation="4dp"
                android:gravity="center"
                android:paddingStart="1dp"
                android:paddingEnd="20dp"
                android:text="@string/default_Answer"
                android:textColor="@drawable/radio_text_color" />

            <RadioButton
                android:id="@+id/rbanswerC"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/radio_selector"
                android:button="@color/white"
                android:drawableEnd="@drawable/radio_checked_image"
                android:elevation="4dp"
                android:gravity="center"
                android:paddingStart="1dp"
                android:paddingEnd="20dp"
                android:text="@string/default_Answer"
                android:textColor="@drawable/radio_text_color" />

            <RadioButton
                android:id="@+id/rbanswerD"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/radio_selector"
                android:button="@color/white"
                android:drawableEnd="@drawable/radio_checked_image"
                android:elevation="4dp"
                android:gravity="center"
                android:paddingStart="1dp"
                android:paddingEnd="20dp"
                android:text="@string/default_Answer"
                android:textColor="@drawable/radio_text_color" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout_thequestion"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="6dp"
        android:background="@color/darkPurple"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvthequestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/default_question"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>